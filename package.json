{
  "name": "digital-library-frontend",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",

  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.5",
    "@mui/material": "^7.3.5",
    "axios": "^1.4.0",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.553.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^6.14.1",
    "react-scripts": "5.0.1",
    "react-tsparticles": "^2.12.2",
    "web-vitals": "^2.1.4"
  },

  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",

    "react-start": "react-scripts start",
    "react-build": "react-scripts build",

    "electron-start": "cross-env ELECTRON_START_URL=http://localhost:3000 electron .",

    "dev": "concurrently \"npm run react-start\" \"npm run electron-start\"",

    "dist": "npm run react-build && electron-builder",

    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },

  "build": {
    "appId": "com.digital.library",
    "files": [
      "build/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  },

  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^24.0.0",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.0",
    "wait-on": "^7.0.0"
  },

  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
